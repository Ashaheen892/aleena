{% set dir = user.language.dir %}
<section class="s-block s-block--binary-banner aleena-block-animate {{ component.binary_margin ?'!my-0':''}}">
    <div class="grid grid-cols-2">
      {% for slide in component.binary_banner %}
        <a href="{{ slide.url }}" class="binary-banner aleena-anime-item" aria-label="Banner {{ image.alt }}">
          {% if dir =='rtl' %}
            <img width="980" height="1470" src=" " data-src="{{ slide.image }}" loading="lazy" class="lazy aleena-anime-item w-full h-full" alt="{{ image.alt|trim ? image.alt : 'fixed banner' }}"/>
          {% else %}
            <img width="980" height="1470" src=" " data-src="{{ slide.image_en }}" loading="lazy aleena-anime-item w-full h-full" class="lazy" alt="{{ image.alt|trim ? image.alt : 'fixed banner' }}"/>
          {% endif %}
        </a>
      {% endfor %}
    </div>
</section>
